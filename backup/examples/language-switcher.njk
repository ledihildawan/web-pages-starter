  <button
    @click="$refs.dropdown.toggle()"
    class="inline-flex items-center gap-2 px-3 py-2 rounded-md hover:bg-muted transition-colors"
  >
    <span x-text="flagEmoji" class="text-sm"></span>
    <span x-text="currentLocale.toUpperCase()" class="text-sm font-medium"></span>
  </button>

  <div
    x-ref="dropdown"
    @click.outside="$refs.dropdown.hide()"
    x-show="false"
