{% extends "layouts/base.njk" %}

{% block styles %}
    {{ super() }}
    
    <link rel="stylesheet" href="./about.css" />
{% endblock %}

{% block content -%}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-2xl mx-auto about-container">
        <h1 class="text-4xl font-bold tracking-tight mb-4">
            {{ t('about.title') }}
        </h1>

        <p class="text-lg text-muted-foreground mb-8 leading-relaxed">
            {{ t('about.description') }}
        </p>

        <div class="mb-8 p-6 rounded-lg border border-border bg-muted/50 tech-stack-card">
            <h2 class="mb-4 text-lg font-semibold text-foreground">{{ t('about.tech_stack') }}</h2>
            <div class="grid gap-2 sm:grid-cols-2">
                <div class="flex items-center gap-2 text-sm text-muted-foreground tech-item">
                    <span class="w-1.5 h-1.5 rounded-full bg-brand-400 tech-dot"></span>
                    Bun
                </div>
                <div class="flex items-center gap-2 text-sm text-muted-foreground tech-item">
                    <span class="w-1.5 h-1.5 rounded-full bg-brand-400 tech-dot"></span>
                    Vite
                </div>
                <div class="flex items-center gap-2 text-sm text-muted-foreground tech-item">
                    <span class="w-1.5 h-1.5 rounded-full bg-brand-400 tech-dot"></span>
                    Rolldown
                </div>
                <div class="flex items-center gap-2 text-sm text-muted-foreground tech-item">
                    <span class="w-1.5 h-1.5 rounded-full bg-brand-400 tech-dot"></span>
                    Tailwind CSS
                </div>
                <div class="flex items-center gap-2 text-sm text-muted-foreground tech-item">
                    <span class="w-1.5 h-1.5 rounded-full bg-brand-400 tech-dot"></span>
                    Alpine.js
                </div>
            </div>
        </div>

        <div class="grid gap-3 sm:grid-cols-2">
            <button
                x-data="{ version: '1.0.0', showInfo() { alert('Version: ' + this.version); } }"
                @click="showInfo()"
                class="inline-flex items-center justify-center px-6 py-3 text-sm font-medium rounded-lg bg-foreground text-background hover:bg-foreground/90 transition-colors"
                type="button"
            >
                {{ t('about.btn_info') }}
            </button>

            <a
                href="{{ url('/') }}"
                class="inline-flex items-center justify-center px-6 py-3 text-sm font-medium rounded-lg border border-border hover:bg-muted transition-colors"
            >
                {{ t('about.btn_back') }}
            </a>
        </div>
    </div>
</div>
{%- endblock %}

{% block scripts %}
    {{ super() }}

    <script src="./about.ts" type="module"></script>
{% endblock %}
