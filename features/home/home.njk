{% extends "layouts/base.njk" %}

{% block content %}
<div 
    class="min-h-screen flex flex-col items-center justify-center bg-radial from-white to-gray-100 px-4" 
    x-data="homeController"
>
    <div id="test" class="max-w-md w-full bg-white p-8 rounded-3xl shadow-2xl border border-gray-100 text-center transform transition-all hover:scale-[1.01]">
        
        <div class="w-20 h-20 bg-brand/10 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <i data-lucide="home" class="w-10 h-10 text-brand"></i>
        </div>

        <h1 class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl">
            {{ t('home.welcome') }}
        </h1>

        <div class="mt-4 inline-flex items-center gap-2 px-3 py-1 rounded-full bg-gray-50 border border-gray-200 text-xs font-mono text-gray-500">
            <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
            Route: {{ currentPath }}
        </div>

        <p class="mt-6 text-gray-600 leading-relaxed">
            {{ t('home.description') or 'Selamat datang di ekosistem modern Bun + Vite + Rolldown.' }}
        </p>

        <div class="mt-8 flex flex-col gap-3">
            <button 
                @click="sayHello" 
                class="w-full py-4 px-6 bg-brand hover:bg-brand/90 text-gray-900 font-bold rounded-xl shadow-lg shadow-brand/20 transition-all active:scale-95 flex items-center justify-center gap-2"
            >
                <i data-lucide="zap" class="w-5 h-5"></i>
                <span>{{ t('home.btn_action') or 'Mulai Eksplorasi' }}</span>
            </button>
            
            <a 
                href="/login" 
                class="w-full py-3 px-6 bg-white border border-gray-200 hover:bg-gray-50 text-gray-700 font-medium rounded-xl transition-colors"
            >
                {{ t('home.btn_login') or 'Masuk ke Akun' }}
            </a>
        </div>
    </div>

    <footer class="mt-12 text-gray-400 text-sm flex items-center gap-4">
        <span class="flex items-center gap-1"><i data-lucide="cpu" class="w-4 h-4"></i> Rolldown</span>
        <span class="w-1 h-1 rounded-full bg-gray-300"></span>
        <span class="flex items-center gap-1"><i data-lucide="box" class="w-4 h-4"></i> FDD Pattern</span>
    </footer>
</div>
{% endblock %}