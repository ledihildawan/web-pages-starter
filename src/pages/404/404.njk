{% extends "base.njk" %}

{% block title %}{{ meta.title }}{% endblock %}

{% block content %}
<section class="min-h-screen flex items-center justify-center relative overflow-hidden px-6">
  
  <div class="text-center z-10 max-w-2xl mx-auto">
    <h1 class="text-[10rem] md:text-[15rem] font-black leading-none tracking-tighter bg-gradient-to-b from-white to-slate-900 bg-clip-text text-transparent opacity-80 select-none">
      {{ content.heading }}
    </h1>

    <h2 class="text-2xl md:text-4xl font-bold text-white mb-4 -mt-4 md:-mt-8">
      {{ content.subheading }}
    </h2>

    <p class="text-slate-400 text-lg mb-8 max-w-md mx-auto">
      {{ content.description }}
    </p>

    <a href="/" class="inline-flex items-center gap-2 px-8 py-3 bg-white text-slate-950 font-bold rounded-full hover:bg-violet-200 transition-all transform hover:scale-105 shadow-[0_0_20px_rgba(255,255,255,0.3)]">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
      {{ content.button_text }}
    </a>
  </div>

  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-violet-600/20 blur-[100px] rounded-full -z-10"></div>

</section>
{% endblock %}