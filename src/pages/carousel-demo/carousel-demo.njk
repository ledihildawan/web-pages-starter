{% extends "base.njk" %}

{% block title %}Splide Lazy Load | Starter{% endblock %}

{% block content %}
<section class="relative bg-slate-900">
  
  <div id="main-carousel" class="splide w-full h-[100vh] relative group" aria-label="Hero Banner">
    <div class="splide__track w-full h-full">
      <ul class="splide__list w-full h-full">
        
        <li class="splide__slide w-full h-full relative bg-slate-800">
          <div class="splide__spinner"></div>

          <div class="absolute inset-0 z-0">
             <picture>
                <source 
                  media="(min-width: 1024px)" 
                  data-splide-lazy-srcset="https://images.unsplash.com/photo-1493246507139-91e8fad9978e?q=80&w=2940&auto=format&fit=crop"
                >
                <source 
                  media="(min-width: 640px)" 
                  data-splide-lazy-srcset="https://images.unsplash.com/photo-1470071459604-3b5ec3a7fe05?q=80&w=1800&auto=format&fit=crop"
                >
                <img 
                  data-splide-lazy="https://images.unsplash.com/photo-1500964757637-c85e8a162699?q=80&w=1000&auto=format&fit=crop" 
                  alt="Mountain View" 
                  class="w-full h-full object-cover brightness-50 block"
                >
             </picture>
          </div>

          <div class="relative z-10 h-full flex flex-col justify-center items-center text-center px-6">
            <h2 class="text-4xl md:text-7xl font-bold text-white mb-4">Lazy Load Nature</h2>
            <p class="text-lg text-slate-200">Images are loaded intelligently.</p>
          </div>
        </li>

        <li class="splide__slide w-full h-full relative bg-slate-800">
          <div class="splide__spinner"></div>
          <div class="absolute inset-0 z-0">
             <picture>
                <source 
                  media="(min-width: 1024px)" 
                  data-splide-lazy-srcset="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?q=80&w=2940&auto=format&fit=crop"
                >
                <img 
                  data-splide-lazy="https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?q=80&w=1000&auto=format&fit=crop" 
                  alt="Mountain 2" 
                  class="w-full h-full object-cover brightness-50 block"
                >
             </picture>
          </div>
          <div class="relative z-10 h-full flex flex-col justify-center items-center text-center px-6">
            <h2 class="text-4xl md:text-7xl font-bold text-white mb-4">Performance First</h2>
            <p class="text-lg text-slate-200">Only load what you need.</p>
          </div>
        </li>

        </ul>
    </div>
  </div>
</section>
{% endblock %}