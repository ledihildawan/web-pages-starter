{% extends "public/main.njk" %}

{% block content %}
  {# --- HERO --- #}
  <section class="relative pt-40 pb-16 px-6 text-center overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-96 bg-violet-500/10 blur-[120px] -z-10"></div>

    <h1 class="text-5xl md:text-6xl font-bold mb-6 tracking-tight">
      {{ i18n.t('page.' + page.hero.t_key + '.title_part1') }}
      <span class="bg-linear-to-r from-violet-400 via-fuchsia-400 to-pink-400 bg-clip-text text-transparent">
        {{ i18n.t('page.' + page.hero.t_key + '.title_highlight') }}
      </span>
    </h1>
    <p class="text-lg md:text-xl text-slate-400 max-w-2xl mx-auto mb-12">
      {{ i18n.t('page.' + page.hero.t_key + '.description') }}
    </p>

    <div class="flex items-center justify-center gap-6 mb-16">
      <span class="text-sm font-bold uppercase tracking-widest text-slate-500">{{ i18n.t('page.toggle.monthly') }}</span>
      <button class="w-14 h-7 bg-slate-800 rounded-full relative p-1 transition-all hover:bg-slate-700 border border-white/5">
        <div class="w-5 h-5 bg-white rounded-full shadow-lg transform translate-x-7"></div>
      </button>
      <div class="flex items-center gap-2">
        <span class="text-sm font-bold uppercase tracking-widest text-white">{{ i18n.t('page.toggle.yearly') }}</span>
        <span class="px-2 py-0.5 bg-emerald-500/10 text-emerald-400 text-[10px] font-bold rounded-full border border-emerald-500/20">-20%</span>
      </div>
    </div>
  </section>

  {# --- PRICING CARDS --- #}
  <section class="pb-24 px-6">
    <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-8 items-stretch">
      {% for plan in page.plans %}
        <div class="{% if plan.featured %}relative p-10 rounded-3xl bg-slate-900 border border-violet-500/50 shadow-2xl shadow-violet-500/20 transform md:-translate-y-6{% else %}group p-10 rounded-3xl bg-slate-900/40 border border-white/5 hover:border-white/10 transition-all{% endif %} flex flex-col">

          {% if plan.featured %}
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1.5 bg-linear-to-r from-violet-500 to-fuchsia-500 rounded-full text-[10px] font-black text-white uppercase tracking-widest">
              {{ i18n.t('page.plans.' + plan.id + '.badge') }}
            </div>
          {% endif %}

          <h3 class="text-sm font-bold uppercase tracking-widest text-{{ 'violet-400' if plan.featured else 'slate-400' }} mb-6">
            {{ i18n.t('page.plans.' + plan.id + '.name') }}
          </h3>

          <div class="flex items-baseline gap-1 mb-4">
            <span class="text-5xl font-bold text-white">${{ plan.price }}</span>
            <span class="text-slate-500 font-medium">/mo</span>
          </div>

          <p class="text-slate-400 mb-8 leading-relaxed">
            {{ i18n.t('page.plans.' + plan.id + '.desc') }}
          </p>

          <ul class="space-y-4 flex-grow mb-10">
            {% for i in range(0, plan.feature_count) %}
              <li class="flex items-center gap-3 text-sm {% if plan.featured %}text-slate-200{% else %}text-slate-300{% endif %}">
                <svg class="w-5 h-5 flex-none text-{{ 'violet-400' if plan.featured else 'slate-600' }}" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="3">
                  <path d="M5 13l4 4L19 7"/>
                </svg>
                {{ i18n.t('page.plans.' + plan.id + '.feature_' + i) }}
              </li>
            {% endfor %}
          </ul>

          <a href="#" class="block w-full py-4 text-center {% if plan.featured %}bg-linear-to-r from-violet-500 to-fuchsia-500 shadow-lg shadow-violet-500/30{% else %}bg-white/5 border border-white/10{% endif %} rounded-2xl font-bold text-white transition-all">
            {{ i18n.t('page.plans.' + plan.id + '.btn') }}
          </a>
        </div>
      {% endfor %}
    </div>
  </section>

  {# --- FAQ --- #}
  <section class="py-24 px-6 relative overflow-hidden">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-white mb-4">{{ i18n.t('page.faq.title') }}</h2>
        <div class="h-1 w-12 bg-violet-500 mx-auto rounded-full"></div>
      </div>

      <div class="grid gap-6">
        {% for i in range(0, page.faq_count) %}
          <div class="p-8 rounded-2xl bg-slate-900/30 border border-white/5 hover:border-white/10 transition-colors group">
            <h3 class="text-lg font-bold text-white mb-3 flex items-center gap-3">
              <span class="text-violet-500 font-mono text-sm">0{{ i + 1 }}.</span>
              {{ i18n.t('page.faq.q_' + i) }}
            </h3>
            <p class="text-slate-400 leading-relaxed pl-8">
              {{ i18n.t('page.faq.a_' + i) }}
            </p>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}