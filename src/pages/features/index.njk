{% extends "public/main.njk" %}

{% block content %}
  <section class="pt-40 pb-20 px-6 text-center">
    <div class="max-w-4xl mx-auto">
      <div class="inline-flex items-center gap-2 px-3 py-1 bg-violet-500/10 border border-violet-500/20 rounded-full text-violet-300 text-xs font-medium mb-6 uppercase tracking-wider">
        {{ i18n.t('page.' + page.hero.t_key + '.badge') }}
      </div>

      <h1 class="text-4xl md:text-6xl font-bold tracking-tight mb-6">
        {{ i18n.t('page.' + page.hero.t_key + '.title') }}
      </h1>

      <p class="text-lg text-slate-400 max-w-2xl mx-auto leading-relaxed">
        {{ i18n.t('page.' + page.hero.t_key + '.description') }}
      </p>
    </div>
  </section>
  <section class="py-10 px-6 space-y-24">
    {% for feature in page.main_features %}
      <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-12 items-center">
        <div class="{{ 'order-2 md:order-2' if feature.reverse else 'order-2 md:order-1' }}">
          <div class="w-12 h-12 rounded-xl bg-{{ feature.accent }}-500/10 flex items-center justify-center text-{{ feature.accent }}-400 mb-6 border border-{{ feature.accent }}-500/20">
            {% if feature.icon == 'lightning' %}
              <svg class="w-6 h-6" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
            {% elseif feature.icon == 'chart' %}
              <svg class="w-6 h-6" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>
            {% endif %}
          </div>

          <h2 class="text-3xl font-bold mb-4">
            {{ i18n.t('page.' + feature.t_key + '.title') }}
          </h2>

          <p class="text-slate-400 text-lg leading-relaxed mb-6">
            {{ i18n.t('page.' + feature.t_key + '.description') }}
          </p>

          <ul class="space-y-3">
            {% for i in range(0, feature.checklist_count) %}
              <li class="flex items-center gap-3 text-slate-300">
                <div class="w-1.5 h-1.5 rounded-full bg-{{ feature.accent }}-400"></div>
                {{ i18n.t('page.' + feature.t_key + '.check_' + i) }}
              </li>
            {% endfor %}
          </ul>
        </div>

        <div class="{{ 'order-1 md:order-1' if feature.reverse else 'order-1 md:order-2' }} relative rounded-2xl bg-slate-900 border border-slate-800 p-2 aspect-4/3 shadow-2xl overflow-hidden group">
          <div class="absolute inset-0 bg-linear-to-{{ 'bl' if feature.reverse else 'tr' }} from-{{ feature.accent }}-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

          <div class="w-full h-full bg-slate-950/50 rounded-xl flex items-center justify-center relative overflow-hidden">
            {% if feature.id == 'sync' %}
              <div class="absolute top-6 left-6 right-6 bottom-6 border border-slate-800 rounded-lg bg-slate-900/50">
                <div class="h-8 border-b border-slate-800 flex items-center px-3 gap-2">
                  <div class="w-2 h-2 rounded-full bg-red-500/50"></div>
                  <div class="w-2 h-2 rounded-full bg-yellow-500/50"></div>
                  <div class="w-2 h-2 rounded-full bg-green-500/50"></div>
                </div>
                <div class="p-4 space-y-3">
                  <div class="h-2 w-3/4 bg-slate-800 rounded"></div>
                  <div class="h-2 w-1/2 bg-slate-800 rounded"></div>
                  <div class="h-2 w-full bg-slate-800 rounded"></div>
                </div>
              </div>
            {% elseif feature.id == 'analytics' %}
              <div class="w-3/4 h-1/2 flex items-end justify-between gap-2 px-4">
                <div class="w-full bg-slate-800 rounded-t-sm h-[40%] group-hover:h-[60%] transition-all duration-700 delay-100 bg-linear-to-t from-{{ feature.accent }}-500/20 to-{{ feature.accent }}-500/50"></div>
                <div class="w-full bg-slate-800 rounded-t-sm h-[70%] group-hover:h-[80%] transition-all duration-700 delay-200 bg-linear-to-t from-{{ feature.accent }}-500/20 to-{{ feature.accent }}-500/50"></div>
                <div class="w-full bg-slate-800 rounded-t-sm h-[50%] group-hover:h-[40%] transition-all duration-700 delay-300 bg-linear-to-t from-{{ feature.accent }}-500/20 to-{{ feature.accent }}-500/50"></div>
                <div class="w-full bg-slate-800 rounded-t-sm h-[80%] group-hover:h-[90%] transition-all duration-700 delay-400 bg-linear-to-t from-{{ feature.accent }}-500/20 to-{{ feature.accent }}-500/50"></div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </section>
  <section class="py-20 px-6">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl font-bold text-center mb-12">
        {{ i18n.t('page.more_title') }}
      </h2>

      <div class="grid md:grid-cols-3 gap-6">
        {% for item in page.additional_features %}
          <div class="p-6 bg-slate-900/50 border border-slate-800 rounded-xl hover:border-violet-500/30 transition-colors group">
            <h3 class="font-semibold text-white mb-2">
              {{ i18n.t('page.' + item.t_key + '.title') }}
            </h3>
            <p class="text-sm text-slate-400">
              {{ i18n.t('page.' + item.t_key + '.desc') }}
            </p>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>
  <section class="py-24 px-6 border-t border-slate-800/50">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6">
        {{ i18n.t('page.' + page.cta.t_key + '.heading') }}
      </h2>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="{{ page.cta.links.create }}" class="w-full sm:w-auto px-8 py-3 bg-white text-slate-900 rounded-lg font-medium hover:bg-slate-100 transition-colors">
          {{ i18n.t('page.' + page.cta.t_key + '.btn_create') }}
        </a>
        <a href="{{ page.cta.links.docs }}" class="w-full sm:w-auto px-8 py-3 bg-slate-800 text-white rounded-lg font-medium hover:bg-slate-700 transition-colors">
          {{ i18n.t('page.' + page.cta.t_key + '.btn_docs') }}
        </a>
      </div>
    </div>
  </section>
{% endblock %}