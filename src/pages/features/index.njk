{% extends "public/main.njk" %}

{% block content %}
  {# --- HERO SECTION --- #}
  {# Menambahkan background ambient agar tidak terlalu flat #}
  <section class="relative pt-40 pb-24 px-6 text-center overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full bg-[radial-gradient(circle_at_top,_var(--tw-gradient-stops))] from-violet-500/10 via-transparent to-transparent -z-10"></div>

    <div class="max-w-4xl mx-auto">
      <div class="inline-flex items-center gap-2 px-3 py-1 bg-violet-500/10 border border-violet-500/20 rounded-full text-violet-300 text-xs font-medium mb-8 uppercase tracking-widest animate-fade-in">
        {{ i18n.t('page.' + page.hero.t_key + '.badge') }}
      </div>

      <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-8 bg-linear-to-b from-white to-slate-400 bg-clip-text text-transparent">
        {{ i18n.t('page.' + page.hero.t_key + '.title') }}
      </h1>

      <p class="text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed mb-10">
        {{ i18n.t('page.' + page.hero.t_key + '.description') }}
      </p>
    </div>
  </section>

  {# --- MAIN FEATURES LOOP --- #}
  <section class="py-20 px-6 space-y-32">
    {% for feature in page.main_features %}
      <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-16 items-center">

        <div class="{{ 'order-2' if feature.reverse else 'order-2 md:order-1' }} space-y-6">
          <div class="inline-flex w-14 h-14 rounded-2xl bg-{{ feature.accent }}-500/10 items-center justify-center text-{{ feature.accent }}-400 border border-{{ feature.accent }}-500/20 shadow-lg shadow-{{ feature.accent }}-500/5">
            {% if feature.icon == 'lightning' %}
              <svg class="w-7 h-7" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
            {% elseif feature.icon == 'chart' %}
              <svg class="w-7 h-7" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>
            {% endif %}
          </div>

          <h2 class="text-4xl font-bold text-white tracking-tight">
            {{ i18n.t('page.' + feature.t_key + '.title') }}
          </h2>

          <p class="text-slate-400 text-lg leading-relaxed">
            {{ i18n.t('page.' + feature.t_key + '.description') }}
          </p>

          <ul class="grid grid-cols-1 gap-4 pt-4">
            {% for i in range(0, feature.checklist_count) %}
              <li class="flex items-center gap-4 text-slate-300 group">
                <div class="flex-none w-5 h-5 rounded-full bg-{{ feature.accent }}-500/20 flex items-center justify-center group-hover:bg-{{ feature.accent }}-500/40 transition-colors">
                  <svg class="w-3 h-3 text-{{ feature.accent }}-400" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="3"><path d="M5 13l4 4L19 7"/></svg>
                </div>
                <span class="text-sm font-medium">{{ i18n.t('page.' + feature.t_key + '.check_' + i) }}</span>
              </li>
            {% endfor %}
          </ul>
        </div>

        {# Visual Placeholder Area #}
        <div class="{{ 'order-1' if feature.reverse else 'order-1 md:order-2' }} relative group">
          <div class="absolute -inset-1 bg-linear-to-r from-{{ feature.accent }}-500 to-fuchsia-500 rounded-2xl blur-md opacity-20 group-hover:opacity-40 transition duration-500"></div>
          <div class="relative rounded-2xl bg-slate-900 border border-white/10 p-3 aspect-4/3 shadow-2xl overflow-hidden backdrop-blur-3xl">
            <div class="w-full h-full bg-slate-950/80 rounded-xl flex items-center justify-center relative overflow-hidden border border-white/5">
              {% if feature.id == 'sync' %}
                {# Mockup UI Sync yang lebih detail #}
                <div class="w-4/5 space-y-4">
                  <div class="flex items-center justify-between p-3 bg-white/5 rounded-lg border border-white/10 animate-pulse">
                    <div class="flex items-center gap-3">
                      <div class="w-8 h-8 rounded bg-violet-500/20"></div>
                      <div class="h-2 w-24 bg-slate-700 rounded"></div>
                    </div>
                    <div class="h-4 w-4 rounded-full bg-green-500/50"></div>
                  </div>
                  <div class="flex items-center justify-between p-3 bg-white/5 rounded-lg border border-white/10">
                    <div class="flex items-center gap-3">
                      <div class="w-8 h-8 rounded bg-blue-500/20"></div>
                      <div class="h-2 w-32 bg-slate-700 rounded"></div>
                    </div>
                    <div class="h-4 w-4 rounded-full bg-yellow-500/50 animate-bounce"></div>
                  </div>
                </div>
              {% elseif feature.id == 'analytics' %}
                <div class="w-3/4 h-1/2 flex items-end justify-between gap-3 px-4">
                  {% for h in[
                    40,
                    70,
                    50,
                    90,
                    60,
                    85
                  ] %}
                    <div class="w-full bg-linear-to-t from-{{ feature.accent }}-500/40 to-{{ feature.accent }}-400 rounded-t-md transition-all duration-1000 hover:brightness-125" style="height: {{ h }}%"></div>
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </section>

  {# --- ADDITIONAL FEATURES GRID --- #}
  <section class="py-24 px-6 relative">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16 space-y-4">
        <h2 class="text-3xl font-bold tracking-tight text-white">
          {{ i18n.t('page.more_title') }}
        </h2>
        <div class="h-1 w-20 bg-violet-500 mx-auto rounded-full"></div>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {% for item in page.additional_features %}
          <div class="group p-8 bg-slate-900/40 border border-white/5 rounded-2xl hover:bg-slate-900/60 hover:border-violet-500/30 transition-all duration-300">
            <div class="w-10 h-10 rounded-lg bg-slate-800 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform">
              <svg class="w-5 h-5 text-violet-400" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path d="M12 6V12M12 12V18M12 12H18M12 12H6" stroke-width="2"/></svg>
            </div>
            <h3 class="text-lg font-bold text-white mb-3">
              {{ i18n.t('page.' + item.t_key + '.title') }}
            </h3>
            <p class="text-slate-400 text-sm leading-relaxed">
              {{ i18n.t('page.' + item.t_key + '.desc') }}
            </p>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>

  {# --- FOOTER CTA --- #}
  <section class="py-24 px-6">
    <div class="max-w-5xl mx-auto relative rounded-3xl overflow-hidden p-12 text-center border border-white/10">
      <div class="absolute inset-0 bg-linear-to-br from-violet-600/20 via-slate-950 to-fuchsia-600/10 -z-10"></div>

      <h2 class="text-4xl font-bold mb-8 text-white tracking-tight">
        {{ i18n.t('page.' + page.cta.t_key + '.heading') }}
      </h2>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
        <a href="{{ page.cta.links.create }}" class="group relative w-full sm:w-auto px-10 py-4 bg-white text-slate-950 rounded-xl font-bold overflow-hidden transition-all hover:scale-105 active:scale-95">
          <div class="absolute inset-0 bg-linear-to-r from-violet-200 to-white opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <span class="relative">{{ i18n.t('page.' + page.cta.t_key + '.btn_create') }}</span>
        </a>
        <a href="{{ page.cta.links.docs }}" class="w-full sm:w-auto px-10 py-4 bg-slate-900 text-white border border-white/10 rounded-xl font-bold hover:bg-slate-800 transition-all hover:border-white/20">
          {{ i18n.t('page.' + page.cta.t_key + '.btn_docs') }}
        </a>
      </div>
    </div>
  </section>
{% endblock %}