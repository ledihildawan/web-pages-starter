{% extends "base.njk" %}

{% block content %}
    <section class="pt-32 pb-20 px-6">
      <div class="max-w-6xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-violet-500/10 border border-violet-500/20 rounded-full text-violet-300 text-sm mb-8">
          <span class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse"></span>
          <span>{{ hero.badge }}</span>
        </div>
        
        <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-6 leading-[1.1]">
          {{ hero.title_start }}
          <span class="block bg-gradient-to-r from-violet-400 via-fuchsia-400 to-pink-400 bg-clip-text text-transparent">
            {{ hero.title_highlight }}
          </span>
          <img 
  src="{% static 'images/hero-test.jpg' %}" 
  alt="Testing Hash & Compress" 
  class="w-64 h-auto rounded-lg shadow-xl mx-auto my-8"
>
        </h1>
        
        <p class="text-xl text-slate-400 max-w-2xl mx-auto mb-10 leading-relaxed">
          {{ hero.description }}
        </p>
        
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-8">
          <a href="{{ hero.primary_btn.url }}" class="w-full sm:w-auto px-8 py-4 bg-gradient-to-r from-violet-500 to-fuchsia-500 rounded-xl font-semibold text-lg hover:opacity-90 transition-opacity shadow-lg shadow-violet-500/25">
            {{ hero.primary_btn.label }}
          </a>
          <a href="{{ hero.secondary_btn.url }}" class="w-full sm:w-auto px-8 py-4 bg-slate-800 border border-slate-700 rounded-xl font-semibold text-lg hover:bg-slate-700 transition-colors">
            {{ hero.secondary_btn.label }}
          </a>
        </div>
        
        <p class="text-sm text-slate-500">{{ hero.note }}</p>
      </div>
    </section>

    <section id="features" class="py-20 px-6">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">{{ features.heading }}</h2>
          <p class="text-slate-400 max-w-xl mx-auto">{{ features.subheading }}</p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-6">
          {# --- LOOPING FEATURES DARI JSON --- #}
          {% for item in features.list %}
          <div class="group p-8 rounded-2xl bg-slate-900/50 border border-slate-800/50 hover:border-{{ item.color }}-500/30 transition-all">
            
            {# Dynamic Color Class: bg-violet-500/10, text-violet-400, dll #}
            <div class="w-14 h-14 rounded-2xl bg-{{ item.color }}-500/10 flex items-center justify-center text-{{ item.color }}-400 mb-6 group-hover:bg-{{ item.color }}-500/20 transition-colors">
              
              {# Logic Sederhana untuk memilih Icon berdasarkan nama di JSON #}
              {% if item.icon == 'lightning' %}
                <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" /></svg>
              {% elif item.icon == 'design' %}
                <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.39m3.421 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" /></svg>
              {% elif item.icon == 'shield' %}
                <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" /></svg>
              {% endif %}

            </div>
            <h3 class="text-xl font-semibold mb-3">{{ item.title }}</h3>
            <p class="text-slate-400 leading-relaxed">{{ item.description }}</p>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <section class="py-16 px-6 border-y border-slate-800/50">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          
          {# --- LOOPING STATS DARI JSON --- #}
          {% for stat in stats %}
          <div>
            {# Menggunakan class warna dinamis dari JSON (text-violet-400, text-pink-400, dll) #}
            <p class="text-4xl font-bold text-{{ stat.color }}-400 mb-2">{{ stat.value }}</p>
            <p class="text-slate-500">{{ stat.label }}</p>
          </div>
          {% endfor %}

        </div>
      </div>
    </section>

    <section class="py-24 px-6">
      <div class="max-w-4xl mx-auto">
        <div class="p-12 rounded-3xl bg-gradient-to-r from-violet-500/10 via-fuchsia-500/10 to-pink-500/10 border border-violet-500/20 text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">{{ cta.heading }}</h2>
          <p class="text-slate-400 mb-8 max-w-lg mx-auto">{{ cta.description }}</p>
          <a href="#" class="inline-block px-8 py-4 bg-white text-slate-900 rounded-xl font-semibold text-lg hover:bg-slate-100 transition-colors">
            {{ cta.button_text }}
          </a>
        </div>
      </div>
    </section>
{% endblock %}